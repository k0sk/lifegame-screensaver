<Window x:Class="LifeGameScreenSaver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lifegame="clr-namespace:LifeGameScreenSaver"
        Title="LifeGameScreenSaver"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        KeyDown="Window_KeyDown"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MouseRightButtonDown="Window_MouseRightButtonDown">
    <lifegame:BoardView x:Name="LifeGameView"
                        MouseMove="LifeGameView_MouseMove"></lifegame:BoardView>
</Window>
